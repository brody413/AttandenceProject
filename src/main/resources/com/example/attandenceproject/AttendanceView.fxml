                              <RadioButton mnemonicParsing="false" text="No" toggleGroup="$wednesdayGroup" />
                           </children>
                        </VBox>

                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="Thursday" />
                        <VBox alignment="CENTER" prefHeight="65.0" prefWidth="100.0">
                           <children>
                              <RadioButton mnemonicParsing="false" text="Yes">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="thursdayGroup" />
