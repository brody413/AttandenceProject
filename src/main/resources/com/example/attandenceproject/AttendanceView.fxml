                           <children>
                              <RadioButton mnemonicParsing="false" text="Yes">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="fridayGroup" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="No" toggleGroup="$fridayGroup" />
                           </children>
                        </VBox>

                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="submitFormBTN" mnemonicParsing="false" text="Submit Form">
               <font>
                  <Font name="Times New Roman" size="18.0" />
               </font>
            </Button>
            <Button fx:id="teacherBTN" mnemonicParsing="false" text="Main Menu">
               <font>
                  <Font name="Times New Roman" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
